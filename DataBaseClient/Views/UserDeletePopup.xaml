<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="DataBaseClient.Views.UserDeletePopup"
			   Color="Transparent" >
	<Frame Style="{StaticResource PopupFrame}">
		<VerticalStackLayout Padding="8" WidthRequest="300">
			<Label  Text="Updating the user" Style="{StaticResource PopupHeader}"/>
			<Entry x:Name="guidEntry" Placeholder="Guid" MaxLength="50" Style="{StaticResource PopupEntry}"/>
			<HorizontalStackLayout Style="{StaticResource PopupButtonLayout}">
				<Button Text="Delete"
					Clicked="OnYesButtonClicked"/>
				<Button Text="Close"
					Clicked="OnNoButtonClicked"/>
			</HorizontalStackLayout>
		</VerticalStackLayout>
	</Frame>
</toolkit:Popup>